<view class="container" wx:if="{{visible}}">
	<view class="confirm">
		<textarea class="textarea" placeholder="{{placeholder}}" bindinput="watchValue" value="{{value}}"></textarea>
		<view class="actions">
			<view class="view sure" hover-class='active' bindtap="confirm">确定</view>
			<view class="view" hover-class='active' bindtap="cancel">取消</view>
		</view>
	</view>
</view>