<view class="home-container">
	<scroll-view class="todoList" scroll-y="true">
		<view class="item" wx:for="{{list}}" wx:key="index">
			<view class="select {{item.completed && 'active'}}"></view>
			<text>{{item.text}}</text>
		</view>
	</scroll-view>
	<t-button class=" createButton" type="change" text="创建任务" bindtap="showPrompt" />
	<view class="tomato-wrapper">
		<view class="tomato">
			<t-clock text="点击开始番茄" />
		</view>
	</view>
	<t-prompt placeholder="完成了些什么？" visible="{{promptVisible}}" bindconfirm="confirmCreate" bindcancel="hidePrompt" />
</view>